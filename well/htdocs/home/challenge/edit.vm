<form name="challengeEditForm" action="$!homeServer.getURI("challenge/doUpdate.htm")" method="post">
  <table class="table">
  #springBind("challengeEditForm.id")
  <input type="hidden" name="${status.expression}" value="$!status.value" />
                #springBind("challengeEditForm.teamId")
          <tr>
              <td>球队ID</td>
              <td>
                  <input class="form-control" type="text" name="${status.expression}" value="$!status.value" />
                  #foreach($error in $status.errorMessages) <b>$error</b>  #end
              </td>
          </tr>
                #springBind("challengeEditForm.courtId")
          <tr>
              <td>场地ID</td>
              <td>
                  <input class="form-control" type="text" name="${status.expression}" value="$!status.value" />
                  #foreach($error in $status.errorMessages) <b>$error</b>  #end
              </td>
          </tr>
                #springBind("challengeEditForm.challengeTime")
          <tr>
              <td>约战日期</td>
              <td>
                  <input class="form-control" type="text" name="${status.expression}" value="$!status.value" />
                  #foreach($error in $status.errorMessages) <b>$error</b>  #end
              </td>
          </tr>
                #springBind("challengeEditForm.challengeDesc")
          <tr>
              <td>约战条件</td>
              <td>
                  <input class="form-control" type="text" name="${status.expression}" value="$!status.value" />
                  #foreach($error in $status.errorMessages) <b>$error</b>  #end
              </td>
          </tr>
                #springBind("challengeEditForm.challengeResult")
          <tr>
              <td>约战结果</td>
              <td>
                  <input class="form-control" type="text" name="${status.expression}" value="$!status.value" />
                  #foreach($error in $status.errorMessages) <b>$error</b>  #end
              </td>
          </tr>
                #springBind("challengeEditForm.goalCount")
          <tr>
              <td>比赛进球数</td>
              <td>
                  <input class="form-control" type="text" name="${status.expression}" value="$!status.value" />
                  #foreach($error in $status.errorMessages) <b>$error</b>  #end
              </td>
          </tr>
                #springBind("challengeEditForm.status")
          <tr>
              <td>是否接受应战</td>
              <td>
                  <input class="form-control" type="text" name="${status.expression}" value="$!status.value" />
                  #foreach($error in $status.errorMessages) <b>$error</b>  #end
              </td>
          </tr>
      	  <tr>
	  <td colspan="2">
	  <input type="submit" class="btn" value="提交"/></td>
	  </tr>
  </table>
</form>